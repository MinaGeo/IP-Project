
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/shared/_LayoutLogin.cshtml";
}

<body>

    <div class="signincontainer">

        <div class="signinform">
            <h1 id="signtitle">Log in</h1>
            <h2><b>A verification code was sent to your Mail</b></h2>
            <form>
                <div>


                    <div class="input-field">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="text" placeholder="Email" name="VerificationCode">

                    </div>


                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" placeholder=" New password" name="password">

                    </div>


                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" placeholder=" Re-New password" name="re-enter password">

                    </div>


                    <div class="Loginbtns">

                        <button type="button" onclick="location.href='Index.html'"><b>Submit</b></button>
                    </div>
                  </div>

            </form>
        </div>
        </div>
</body>

